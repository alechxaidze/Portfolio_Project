<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane style="-fx-background-color: #0f1222;" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">

    <VBox alignment="CENTER" maxWidth="420" spacing="14" styleClass="card-strong">
        <Label styleClass="h1" text="Portfolio Manager" />
        <Label styleClass="muted" text="Login to continue" />

        <VBox alignment="CENTER_LEFT" maxWidth="360" spacing="8">
            <Label styleClass="muted" text="Email" />
            <TextField fx:id="emailField" promptText="e.g. student@mail.com" />
        </VBox>

        <VBox alignment="CENTER_LEFT" maxWidth="360" spacing="8">
            <Label styleClass="muted" text="Password" />
            <PasswordField fx:id="passwordField" promptText="Your password" />
        </VBox>

        <Label fx:id="messageLabel" styleClass="small" text="" />

        <Button maxWidth="360" onAction="#handleLogin" styleClass="btn-primary" text="Login" />

        <HBox alignment="CENTER" spacing="6">
            <Label styleClass="muted" text="No account?" />
            <Hyperlink onAction="#goToRegister" text="Create one" />
        </HBox>
    </VBox>

</StackPane>
