<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.SavingsController"
      stylesheets="@styles.css"
      styleClass="page"
      spacing="16">

    <HBox styleClass="topbar" alignment="CENTER_LEFT" spacing="10">
        <Label text="Savings" styleClass="h2"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Back to Dashboard" onAction="#goToDashboard"/>
    </HBox>

    <HBox spacing="14">

        <VBox styleClass="card" spacing="8" prefWidth="260">
            <Label text="Current Balance" styleClass="muted"/>
            <Label fx:id="balanceLabel" text="â‚¬0.00" styleClass="h2"/>
            <Label text="Based on your transactions" styleClass="small muted"/>

            <Separator />

            <Label text="Savings Account" styleClass="muted"/>
            <HBox spacing="10">
                <TextField fx:id="accountNameField" promptText="Account name (optional)" HBox.hgrow="ALWAYS"/>
                <Button text="Create" onAction="#handleCreateAccount"/>
            </HBox>

            <Label fx:id="accountInfoLabel" text="" styleClass="small muted"/>
        </VBox>

        <VBox styleClass="card" spacing="10" HBox.hgrow="ALWAYS">
            <Label text="Add Transaction" styleClass="h2"/>

            <HBox spacing="10">
                <TextField fx:id="amountField" promptText="Amount" HBox.hgrow="ALWAYS"/>
                <ComboBox fx:id="typeBox" promptText="Deposit/Withdraw" prefWidth="170"/>
            </HBox>

            <TextField fx:id="noteField" promptText="Note (optional)"/>

            <Button text="Save Transaction" styleClass="btn-primary"
                    onAction="#addTransaction" maxWidth="Infinity"/>

            <Label fx:id="messageLabel" text="" styleClass="small"/>
        </VBox>

    </HBox>

    <VBox styleClass="card" spacing="10">
        <Label text="Transactions" styleClass="h2"/>
        <ListView fx:id="transactionsList" prefHeight="280"/>
    </VBox>

</VBox>
