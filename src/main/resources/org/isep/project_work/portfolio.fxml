<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<HBox spacing="15" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.PortfolioController">
    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
    
    <VBox spacing="10" prefWidth="250">
        <Label text="My Portfolios" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
        <ListView fx:id="portfolioList" VBox.vgrow="ALWAYS"/>
        <HBox spacing="5">
            <Button text="New" onAction="#handleCreatePortfolio" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
            <Button text="Clone" onAction="#handleClonePortfolio" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
            <Button text="Delete" onAction="#handleDeletePortfolio" HBox.hgrow="ALWAYS" maxWidth="Infinity" style="-fx-background-color: #c0392b;"/>
        </HBox>
    </VBox>
    
    <VBox spacing="10" HBox.hgrow="ALWAYS">
        <HBox spacing="15" alignment="CENTER_LEFT">
            <Label text="Assets" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Currency:"/>
            <ComboBox fx:id="currencySelector" prefWidth="120"/>
        </HBox>
        
        <Label fx:id="portfolioDescLabel" text="" style="-fx-text-fill: #888;"/>
        
        <TableView fx:id="assetTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="symbolColumn" text="Symbol" prefWidth="80"/>
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
                <TableColumn fx:id="typeColumn" text="Type" prefWidth="80"/>
                <TableColumn fx:id="quantityColumn" text="Qty" prefWidth="80"/>
                <TableColumn fx:id="priceColumn" text="Price" prefWidth="100"/>
                <TableColumn fx:id="valueColumn" text="Value" prefWidth="100"/>
                <TableColumn fx:id="plColumn" text="P/L" prefWidth="100"/>
            </columns>
        </TableView>
        
        <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-padding: 10; -fx-background-color: #2a2a3a; -fx-background-radius: 5;">
            <Label fx:id="totalValueLabel" text="Total Value: $0.00" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <Label fx:id="profitLossLabel" text="P/L: $0.00" style="-fx-font-size: 14px;"/>
        </HBox>
        
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="ðŸ“¥ Import CSV" onAction="#handleImportCSV"/>
            <Button text="Add Asset" onAction="#handleAddAsset" styleClass="primary-button"/>
            <Button text="Remove Asset" onAction="#handleRemoveAsset"/>
        </HBox>
    </VBox>
</HBox>