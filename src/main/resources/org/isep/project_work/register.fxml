<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="controller.RegisterController"
           stylesheets="@styles.css"
           style="-fx-background-color: #0f1222;">

    <VBox spacing="14" maxWidth="460" styleClass="card-strong" alignment="CENTER">
        <Label text="Create Account" styleClass="h1"/>
        <Label text="It takes less than a minute" styleClass="muted"/>

        <HBox spacing="10" maxWidth="400">
            <VBox spacing="8" HBox.hgrow="ALWAYS">
                <Label text="Name" styleClass="muted"/>
                <TextField fx:id="nameField" promptText="Your name"/>
            </VBox>
            <VBox spacing="8" HBox.hgrow="ALWAYS">
                <Label text="Email" styleClass="muted"/>
                <TextField fx:id="emailField" promptText="student@mail.com"/>
            </VBox>
        </HBox>

        <VBox spacing="8" maxWidth="400" alignment="CENTER_LEFT">
            <Label text="Password" styleClass="muted"/>
            <PasswordField fx:id="passwordField" promptText="Create a password"/>
        </VBox>

        <VBox spacing="8" maxWidth="400" alignment="CENTER_LEFT">
            <Label text="Confirm Password" styleClass="muted"/>
            <PasswordField fx:id="confirmPasswordField" promptText="Re-type password"/>
        </VBox>

        <Label fx:id="messageLabel" text="" styleClass="small"/>

        <HBox spacing="10" maxWidth="400">
            <Button text="Create Account"
                    styleClass="btn-primary"
                    onAction="#handleRegister"
                    HBox.hgrow="ALWAYS"
                    maxWidth="Infinity"/>
            <Button text="Back"
                    onAction="#handleBack"
                    HBox.hgrow="ALWAYS"
                    maxWidth="Infinity"/>
        </HBox>
    </VBox>

</StackPane>
