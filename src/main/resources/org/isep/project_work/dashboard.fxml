<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.MainController"
            stylesheets="@styles.css"
            style="-fx-background-color: #0f1222;">

    <top>
        <HBox spacing="12" alignment="CENTER_LEFT" styleClass="topbar">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16"/>
            </padding>

            <Label fx:id="userLabel" text="Welcome" styleClass="h2"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#handleLogout" styleClass="btn-danger"/>
        </HBox>
    </top>

    <center>
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">

            <tabs>
                <Tab fx:id="portfoliosTab" text="Portfolios">
                    <VBox spacing="12">
                        <padding>
                            <Insets top="18" right="18" bottom="18" left="18"/>
                        </padding>

                        <Label text="Portfolios" styleClass="h1"/>
                        <Label text="Manage your assets, transactions, and performance." styleClass="muted"/>
                        <fx:include fx:id="portfolioView" source="portfolio.fxml"/>
                    </VBox>
                </Tab>

                <Tab fx:id="savingsTab" text="Savings">
                    <VBox spacing="12">
                        <padding>
                            <Insets top="18" right="18" bottom="18" left="18"/>
                        </padding>

                        <Label text="Savings" styleClass="h1"/>
                        <Label text="Track savings accounts, deposits, and withdrawals." styleClass="muted"/>
                        <fx:include fx:id="savingsView" source="savings.fxml"/>
                    </VBox>
                </Tab>

                <Tab fx:id="analysisTab" text="Analysis">
                    <VBox spacing="12">
                        <padding>
                            <Insets top="18" right="18" bottom="18" left="18"/>
                        </padding>

                        <Label text="Analysis" styleClass="h1"/>
                        <Label text="Charts and portfolio insights." styleClass="muted"/>
                        <fx:include fx:id="chartsView" source="charts.fxml"/>
                    </VBox>
                </Tab>

                <Tab fx:id="whaleWatchTab" text="Whale Watch">
                    <VBox spacing="12">
                        <padding>
                            <Insets top="18" right="18" bottom="18" left="18"/>
                        </padding>
                        <fx:include fx:id="whaleWatchView" source="whale_watch.fxml"/>
                    </VBox>
                </Tab>
            </tabs>

        </TabPane>
    </center>

</BorderPane>
